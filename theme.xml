<theme>

   <include>./_inc/systems/metadata-global/_default.xml</include>
   <include>./_inc/systems/metadata-custom/_default.xml</include>
   <include>./_inc/systems/metadata-global/${system.theme}.xml</include>
   <include>./colors.xml</include>

   <variables>
      <spacerImage>./_inc/images/space.png</spacerImage>
      <fontLight>./_inc/fonts/Gilroy-Light.ttf</fontLight>
      <fontBold>./_inc/fonts/Gilroy-Bold.ttf</fontBold>
   </variables>

   <view name="system,gamelist">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <color>${systemBackgroundColor}</color>
         <zIndex>0</zIndex>
      </image>
      <helpsystem name="help">
         <origin>0.5 1</origin>
         <pos>0.5 0.95</pos>
         <posDimmed>0.5 0.97</posDimmed>
         <fontSize>0.02962962962963</fontSize><!-- 32 -->
         <iconColor>${helpIconColor}</iconColor>
         <textColor>${helpTextColor}</textColor>
      </helpsystem>
      <text name="system-label">
         <pos>0.075 0.111111111111111</pos><!-- 144 130 -->
         <size>0.3 0.025925925925926</size>
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.025925925925926</fontSize><!-- 28 -->
         <lineSpacing>1</lineSpacing>
         <color>${systemLabelColor}</color>
         <text>${systemManufacturer}  /  ${systemReleaseYear}  /  ${systemHardwareType}</text>
         <zIndex>5</zIndex>
      </text>
      <text name="system-name-no-collections,system-name-auto-collections,system-name-custom-collections,custom-collection-name">
         <pos>0.075 0.153703703703704</pos><!-- 144 166 -->
         <size>0.3 0.2</size>
         <fontPath>${fontBold}</fontPath>
         <lineSpacing>1</lineSpacing>
         <color>${systemNameColor}</color>
         <verticalAlignment>top</verticalAlignment>
         <zIndex>5</zIndex>
      </text>
      <text name="system-name-no-collections">
         <text>${system.fullName.noCollections}</text>
      </text>
      <text name="system-name-auto-collections">
         <text>${system.fullName.autoCollections}</text>
         <letterCase>capitalize</letterCase>
      </text>
   </view>

   <view name="system">
      <carousel name="system-carousel">
         <origin>0.5 0.5</origin>
         <pos>0.6875 0.5</pos><!-- 1320 -->
         <size>0.5625 1</size>
         <type>vertical</type>
         <itemScale>1</itemScale>
         <itemSize>1 1</itemSize>
         <maxItemCount>1</maxItemCount>
         <staticImage>./_inc/systems/images/${system.theme}.webp</staticImage>
         <defaultImage>./_inc/systems/images/_default.webp</defaultImage>
         <fastScrolling>true</fastScrolling>
         <color>00000000</color>
      </carousel>
      <text name="system-name,system-name-no-collections,system-name-auto-collections,system-name-custom-collections,custom-collection-name">
         <fontSize>0.062962962962963</fontSize><!-- 68 -->
      </text>
      <text name="system-description">
         <pos>0.075 0.56</pos>
         <size>0.3 0.22</size>
         <fontPath>${fontLight}</fontPath>
         <fontSize>0.02962962962963</fontSize><!-- 32 -->
         <lineSpacing>1.25</lineSpacing>
         <text>${systemDescription}</text>
         <verticalAlignment>bottom</verticalAlignment>
         <color>${systemDescriptionColor}</color>
         <container>true</container>
      </text>
      <text name="system-game-count">
         <pos>0.075 0.81</pos>
         <size>0.3 0</size>
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.033333333333333</fontSize><!-- 36 -->
         <lineSpacing>1</lineSpacing>
         <letterCase>uppercase</letterCase>
         <systemdata>gamecount</systemdata>
         <color>${systemGameCountColor}</color>
      </text>
   </view>

   <view name="gamelist">
      <text name="system-name-no-collections,system-name-auto-collections,system-name-custom-collections">
         <fontSize>0.038888888888889</fontSize><!-- 42 -->
      </text>
      <video name="game-art">
         <origin>0.5 0.5</origin>
         <pos>0.7 0.46</pos>
         <maxSize>0.46875 0.7</maxSize><!-- 900 675 -->
         <imageType>miximage</imageType>
         <defaultImage>./_inc/systems/images/_default.png</defaultImage>
         <pillarboxes>false</pillarboxes>
         <delay>2</delay>
      </video>
      <textlist name="game-list">
         <origin>0 0</origin>
         <pos>0.066666666666667 0.277777777777778</pos><!-- 128 300 -->
         <size>0.308333333333333 0.555555555555556</size><!-- 592 -->
         <fontPath>${fontBold}</fontPath>
         <fontSize>0.033333333333333</fontSize><!-- 36 -->
         <selectorColor>${gamelistSelectorColor}</selectorColor>
         <primaryColor>${gamelistPrimaryColor}</primaryColor>
         <secondaryColor>${gamelistSecondaryColor}</secondaryColor>
         <selectedColor>${gamelistSelectedColor}</selectedColor>
         <horizontalMargin>0.009</horizontalMargin>
      </textlist>
   </view>

   <view name="all">
      <sound name="systembrowse">
         <path>./_inc/sounds/systembrowse.wav</path>
      </sound>
      <sound name="quicksysselect">
         <path>./_inc/sounds/quicksysselect.wav</path>
      </sound>
      <sound name="select">
         <path>./_inc/sounds/select.wav</path>
      </sound>
      <sound name="back">
         <path>./_inc/sounds/back.wav</path>
      </sound>
      <sound name="scroll">
         <path>./_inc/sounds/scroll.wav</path>
      </sound>
      <sound name="favorite">
         <path>./_inc/sounds/favorite.wav</path>
      </sound>
      <sound name="launch">
         <path>./_inc/sounds/launch.wav</path>
      </sound>
   </view>

</theme>