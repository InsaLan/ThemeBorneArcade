<themeCapabilities>
   
   <themeName>Colorful (Simplified)</themeName>

   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>slide</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>fade</startupToSystem>
      <startupToGamelist>fade</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <colorScheme name="Colorful">
      <label>Colorful</label>
   </colorScheme>
   <colorScheme name="Light">
      <label>Light</label>
   </colorScheme>
   <colorScheme name="Dark">
      <label>Dark</label>
   </colorScheme>

   <!-- List: Metadata Off -->
   <variant name="gamelist-metadata-off-miximage">
      <label>List View: Miximage</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-off-boxart">
      <label>List View: Boxart</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>cover</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-off-screenshot">
      <label>List View: Screenshot</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>screenshot</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-off-screenshot-marquee">
      <label>List View: Screenshot + Marquee</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>screenshot</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-off-titlescreen">
      <label>List View: Title Screen</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>titlescreen</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>

   <!-- List: Metadata On -->
   <variant name="gamelist-metadata-on-miximage">
      <label>List View: Metadata &amp; Miximage</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-on-boxart">
      <label>List View: Metadata &amp; Boxart</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>cover</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-on-screenshot">
      <label>List View: Metadata &amp; Screenshot</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>screenshot</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-on-screenshot-marquee">
      <label>List View: Metadata &amp; Screenshot + Marquee</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>screenshot</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-metadata-on-titlescreen">
      <label>List View: Metadata &amp; Title Screen</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>titlescreen</mediaType>
         <useVariant>gamelist-basic</useVariant>
      </override>
   </variant>

   <!-- Grid -->
   <variant name="gamelist-grid">
      <label>Grid View</label>
      <selectable>true</selectable>
   </variant>

   <!-- Carousel -->
   <variant name="gamelist-carousel">
      <label>Carousel View</label>
      <selectable>true</selectable>
   </variant>

   <!-- Basic -->
   <variant name="gamelist-basic">
      <label>Basic View</label>
      <selectable>true</selectable>
   </variant>

</themeCapabilities>